{% extends "_layout.twig" %}

{% set title = "Upload" %}

{% block precontent %}
    <div class="jumbotron page-banner">
        <div class="jumbotron-container">
            <div>
                <h1>Files for new upload</h1>
                <p>
                    Upload files one-by-one below.
                </p>
            </div>
        </div>
    </div>
{% endblock %}

	{% block content %}
        <div class="banner banner-secondary">
            <span class="notification-text">
            Please read our <a href="/guidelines">upload guidelines</a> before uploading.
            </span>
        </div>
        <div class="section">
            <div class="content-box">
                <form name="uploadForm" id="uploadForm" method="post" action="/dev/upload" enctype="multipart/form-data">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-input">
                                <label for="fileToUpload">Main file:</label>
                                <input class="form-submit" type="file" name="fileToUpload" id="fileToUpload" required>
                            </div>

                            <div>Supported files: Major video and image formats</div>
                            <div>Max file size: {{ limit }}</div>
                            <hr>

                            <div class="form-input">
                                <label for="fileToUpload">Thumbnail:</label>
                                <input class="form-submit" type="file" name="thumbnailToUpload" id="thumbnailToUpload" required>
                            </div>

                            <div class="form-button-container">
                                <input class="button button-primary" type="submit" id="upload" name="upload"
                                       value="Upload">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}