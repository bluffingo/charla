<div class="content-entry">
    <div class="content-thumbnail">
        <a href="/view/{{ submission.id }}">
            <img src="{{ thumbnail(submission.id, submission.type, submission.bools.custom_thumbnail) }}" width="140"
                 alt="{{ submission.title }}" class="content-image thumbnail">
        </a>
    </div>
    <div class="content-info">
        <div class="content-title">
            <a href="/view/{{ submission.id }}">
                {{ submission.title }}
            </a>
        </div>
        <div class="content-description">
            By {{ user_link(submission.author) }}
            <br>
            {{ submission.published | relative_time }}
            <br>
            {% if submission.description|trim is not empty %}
                <span>{{ submission.description }}</span>
            {% else %}
                <span class="fade">No description.</span>
            {% endif %}
        </div>
        <div class="content-rating">
            {{ show_ratings(submission.interactions.ratings) }}
        </div>
    </div>
</div>