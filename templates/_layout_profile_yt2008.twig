{% extends "_layout.twig" %}

{% block style %}
    <style>
        .page {
            background: {{ data.customization.yt2008_background_color }};
        }

        .page a {
            color: {{ data.customization.yt2008_link_color }}
        }

        /* Highlight box */
        .content-header.highlight-box {
            background-color: {{ data.customization.yt2008_basic_box_border_color }};
            color: #ffffff;
        }
        .content-box.highlight-box {
            background-color: {{ data.customization.yt2008_highlight_box_background_color }};
            border-color: {{ data.customization.yt2008_basic_box_border_color }};
            color: {{ data.customization.yt2008_highlight_box_text_color }};
        }

        /* Basic box */
        .content-header.basic-box {
            background-color: {{ data.customization.yt2008_basic_box_border_color }};
            color: #ffffff;
        }
        .content-box.basic-box {
            background-color: {{ data.customization.yt2008_basic_box_background_color }};
            border-color: {{ data.customization.yt2008_basic_box_border_color }};
            color: {{ data.customization.yt2008_basic_box_text_color }};
        }
    </style>
{% endblock %}

{% block content %}{% endblock %}