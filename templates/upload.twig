{% extends "_layout.twig" %}

{% set title = "Upload" %}

	{% block content %}
        <div class="section">
            <div class="section-header">
                <h1 class="section-title">Upload</h1>
                <div>
                    Make sure you have read the <a href="/guidelines">community guidelines</a> first. Failure to comply
                    with the community guidelines will result in your upload being taken down.
                </div>
                <div class="text-danger">
                    Reminder: Do not reupload content that you have not made.
                </div>
            </div>
            <div class="content-box">
                <form name="uploadForm" id="uploadForm" method="post" action="upload" enctype="multipart/form-data">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-input">
                                <label for="title">Title (required):</label>
                                <input type="text" class="form-submit" id="title" name="title" required>
                            </div>

                            <div class="form-input">
                                <label for="desc">Description (optional):</label>
                                <textarea class="form-submit" name="desc" maxlength="65500"
                                          form="uploadForm"
                                          style="overflow:hidden;resize:vertical" rows="3"></textarea>
                            </div>

                            <div class="form-input">
                                <label for="tags">Tags (optional):</label>
                                <input type="text" class="form-submit" name="tags">
                            </div>

                            {% if not is_chaziz_sb %}
                            <div class="form-input">
                                <input type="checkbox" name="rating" id="rating" value="true">
                                <label for="rating"> Mark sensitive</label><br>
                            </div>
                            {% endif %}

                            <div class="form-input">
                                <label for="fileToUpload">File (required):</label>
                                <div>File limit: {{ limit }}</div>
                                <input class="form-submit" type="file" name="fileToUpload" id="fileToUpload" required>
                            </div>

                            <div class="form-button-container">
                                <input class="button button-primary" type="submit" id="upload" name="upload"
                                       value="Upload">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}