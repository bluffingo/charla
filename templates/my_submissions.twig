{% extends "_layout_my_stuff.twig" %}

{% set title = "My uploads" %}

{% block mystuffcontent %}
    {% set items_per_page = 20 %}
    {% set total_pages = (data.count / items_per_page) | round(0, 'ceil') %}
    {% set current_page = page %}

    <div class="section">
        <div class="section-header flex">
            <div class="section-header-left">
                <h1 class="section-title">My uploads</h1>
                <div class="section-desc">Page {{ current_page }} of {{ total_pages }}</div>
            </div>
        </div>
        <div class="content-box">
            {% for submission in data.submissions %}
                {{ include('/components/_upload_vertical_edit.twig') }}
            {% endfor %}
        </div>
        {% set le_url = 'my_uploads?page=%s' %}

        {{ pagination(data.count, items_per_page, le_url, current_page) }}
    </div>
{% endblock %}